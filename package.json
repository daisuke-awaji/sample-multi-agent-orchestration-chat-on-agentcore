{
  "name": "moca",
  "version": "0.1.0",
  "description": "Moca â€” Multi-agent Orchestration Chat on AgentCore",
  "private": true,
  "engines": {
    "node": ">=22.12.0"
  },
  "workspaces": [
    "packages/*",
    "packages/libs/*"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json && npm run build --workspaces --if-present",
    "test": "tsc --build tsconfig.build.json && npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format:check": "npm run format:check --workspaces --if-present",
    "dev": "tsc --build tsconfig.build.json && concurrently -n \"frontend,backend,agent\" -c \"cyan,magenta,yellow\" \"npm:dev:frontend\" \"npm:dev:backend\" \"npm:dev:agent\"",
    "devw": "npm run setup-env && npm run dev",
    "dev:frontend": "npm run dev -w packages/frontend",
    "dev:backend": "npm run dev -w @moca/backend",
    "dev:agent": "npm run dev -w @moca/agent",
    "deploy": "npm run build -w @moca/lambda-tools && npm run deploy -w @moca/cdk",
    "deploy:dev": "npm run build -w @moca/lambda-tools && npm run deploy:dev -w @moca/cdk",
    "deploy:stg": "npm run build -w @moca/lambda-tools && npm run deploy:stg -w @moca/cdk",
    "deploy:prd": "npm run build -w @moca/lambda-tools && npm run deploy:prd -w @moca/cdk",
    "destroy": "npm run destroy -w @moca/cdk",
    "setup-env": "tsx scripts/setup-env.ts",
    "cdk": "npm run cdk -w @moca/cdk",
    "synth": "npm run synth -w @moca/cdk",
    "prepare": "husky"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "^3.716.0",
    "@eslint/js": "^9.39.2",
    "concurrently": "^9.1.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsx": "^4.19.2",
    "typescript": "~5.2.2",
    "typescript-eslint": "^8.50.0"
  },
  "overrides": {
    "test-exclude": "^7.0.1",
    "glob": "^10.0.0",
    "fast-xml-parser": ">=5.3.6",
    "lodash-es": ">=4.17.23"
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
