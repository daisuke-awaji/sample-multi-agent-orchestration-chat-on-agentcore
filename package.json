{
  "name": "fullstack-agentcore",
  "version": "0.1.0",
  "description": "CDK スタックによる Amazon Bedrock AgentCore デプロイメント",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces --if-present",
    "test:integration": "npm run test:integration --workspace=@fullstack-agentcore/backend",
    "setup-env": "tsx scripts/setup-env.ts",
    "dev": "npm run setup-env && concurrently -n \"frontend,backend,agent\" -c \"cyan,magenta,yellow\" \"npm:frontend:dev\" \"npm:backend:dev\" \"npm:agent:dev\"",
    "dev:frontend": "npm run setup-env && npm run frontend:dev",
    "dev:backend": "npm run setup-env && npm run backend:dev",
    "dev:agent": "npm run setup-env && npm run agent:dev",
    "cdk": "npm run cdk --workspace=@fullstack-agentcore/cdk",
    "synth": "npm run synth --workspace=@fullstack-agentcore/cdk",
    "deploy": "npm run deploy --workspace=@fullstack-agentcore/cdk",
    "diff": "npm run diff --workspace=@fullstack-agentcore/cdk",
    "build:lambda": "npm run build --workspace=@fullstack-agentcore/lambda-tools",
    "client:build": "npm run build --workspace=@fullstack-agentcore/client",
    "client:start": "npm run start --workspace=@fullstack-agentcore/client",
    "client:dev": "npm run dev --workspace=@fullstack-agentcore/client",
    "client": "npm run client:build && npm run client:start",
    "frontend:dev": "npm run dev --workspace=packages/frontend",
    "frontend:build": "npm run build --workspace=packages/frontend",
    "frontend:preview": "npm run preview --workspace=packages/frontend",
    "frontend": "npm run frontend:dev",
    "agent:dev": "npm run dev --workspace=@fullstack-agentcore/agent",
    "agent:docker": "cd packages/agent && docker-compose up --build",
    "agent:docker:detach": "cd packages/agent && docker-compose up -d --build",
    "agent:docker:stop": "cd packages/agent && docker-compose down",
    "agent": "npm run agent:dev",
    "backend:dev": "npm run dev --workspace=@fullstack-agentcore/backend",
    "backend:build": "npm run build --workspace=@fullstack-agentcore/backend",
    "backend:start": "npm run start --workspace=@fullstack-agentcore/backend",
    "backend:docker": "cd packages/backend && docker-compose up --build",
    "backend:docker:detach": "cd packages/backend && docker-compose up -d --build",
    "backend:docker:stop": "cd packages/backend && docker-compose down",
    "backend": "npm run backend:dev",
    "lint": "eslint 'packages/**/src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'packages/**/src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'packages/**/src/**/*.{ts,tsx}'",
    "format:check": "prettier --check 'packages/**/src/**/*.{ts,tsx}'",
    "docs:lint": "redocly lint openapi.yaml",
    "docs:preview": "redocly preview-docs openapi.yaml",
    "docs:build": "redocly build-docs openapi.yaml -o api.html",
    "docs:serve": "redocly preview-docs openapi.yaml --port=8081",
    "prepare": "husky"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "^3.716.0",
    "@eslint/js": "^9.39.2",
    "@redocly/cli": "^1.34.6",
    "concurrently": "^9.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsx": "^4.19.2",
    "typescript": "~5.2.2",
    "typescript-eslint": "^8.50.0"
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
