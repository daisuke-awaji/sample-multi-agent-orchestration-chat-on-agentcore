{
  "name": "fullstack-agentcore",
  "version": "0.1.0",
  "description": "CDK スタックによる Amazon Bedrock AgentCore デプロイメント",
  "private": true,
  "engines": {
    "node": ">=22.12.0"
  },
  "workspaces": [
    "packages/*",
    "packages/shared/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=@fullstack-agentcore/tool-definitions && npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:integration": "npm run test:integration --workspace=@fullstack-agentcore/backend",
    "setup-env": "tsx scripts/setup-env.ts",
    "dev": "concurrently -n \"frontend,backend,agent\" -c \"cyan,magenta,yellow\" \"npm:frontend:dev\" \"npm:backend:dev\" \"npm:agent:dev\"",
    "devw": "npm run setup-env && concurrently -n \"frontend,backend,agent\" -c \"cyan,magenta,yellow\" \"npm:frontend:dev\" \"npm:backend:dev\" \"npm:agent:dev\"",
    "dev:frontend": "npm run setup-env && npm run frontend:dev",
    "dev:backend": "npm run setup-env && npm run backend:dev",
    "dev:agent": "npm run setup-env && npm run agent:dev",
    "cdk": "npm run cdk --workspace=@fullstack-agentcore/cdk",
    "synth": "npm run synth --workspace=@fullstack-agentcore/cdk",
    "deploy": "npm run deploy --workspace=@fullstack-agentcore/cdk",
    "deploy:dev": "npm run deploy:dev --workspace=@fullstack-agentcore/cdk",
    "deploy:stg": "npm run deploy:stg --workspace=@fullstack-agentcore/cdk",
    "deploy:prd": "npm run deploy:prd --workspace=@fullstack-agentcore/cdk",
    "deploy:tokyo": "AWS_REGION=ap-northeast-1 AWS_DEFAULT_REGION=ap-northeast-1 CDK_DEFAULT_REGION=ap-northeast-1 npm run deploy --workspace=@fullstack-agentcore/cdk",
    "destroy": "npm run destroy --workspace=@fullstack-agentcore/cdk",
    "destroy:dev": "npm run destroy:dev --workspace=@fullstack-agentcore/cdk",
    "destroy:stg": "npm run destroy:stg --workspace=@fullstack-agentcore/cdk",
    "build:lambda": "npm run build --workspace=@fullstack-agentcore/lambda-tools",
    "client:build": "npm run build --workspace=@fullstack-agentcore/client",
    "client:start": "npm run start --workspace=@fullstack-agentcore/client",
    "client:dev": "npm run dev --workspace=@fullstack-agentcore/client",
    "client": "npm run client:build && npm run client:start",
    "frontend:dev": "npm run dev --workspace=packages/frontend",
    "frontend:build": "npm run build --workspace=packages/frontend",
    "frontend:preview": "npm run preview --workspace=packages/frontend",
    "frontend": "npm run frontend:dev",
    "agent:dev": "npm run dev --workspace=@fullstack-agentcore/agent",
    "agent:docker": "cd packages/agent && docker-compose up --build",
    "agent:docker:detach": "cd packages/agent && docker-compose up -d --build",
    "agent:docker:stop": "cd packages/agent && docker-compose down",
    "agent": "npm run agent:dev",
    "backend:dev": "npm run dev --workspace=@fullstack-agentcore/backend",
    "backend:build": "npm run build --workspace=@fullstack-agentcore/backend",
    "backend:start": "npm run start --workspace=@fullstack-agentcore/backend",
    "backend:docker": "cd packages/backend && docker-compose up --build",
    "backend:docker:detach": "cd packages/backend && docker-compose up -d --build",
    "backend:docker:stop": "cd packages/backend && docker-compose down",
    "backend": "npm run backend:dev",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "format:check": "npm run format:check --workspaces --if-present",
    "docs:lint": "redocly lint openapi-backend.yaml && redocly lint openapi-agent.yaml",
    "docs:preview:backend": "redocly preview-docs openapi-backend.yaml",
    "docs:preview:agent": "redocly preview-docs openapi-agent.yaml --port=8082",
    "docs:build:backend": "redocly build-docs openapi-backend.yaml -o api-backend.html",
    "docs:build:agent": "redocly build-docs openapi-agent.yaml -o api-agent.html",
    "docs:build": "npm run docs:build:backend && npm run docs:build:agent",
    "docs:serve": "redocly preview-docs openapi-backend.yaml --port=8081",
    "prepare": "husky"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "^3.716.0",
    "@eslint/js": "^9.39.2",
    "@redocly/cli": "^1.34.6",
    "concurrently": "^9.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsx": "^4.19.2",
    "typescript": "~5.2.2",
    "typescript-eslint": "^8.50.0"
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
