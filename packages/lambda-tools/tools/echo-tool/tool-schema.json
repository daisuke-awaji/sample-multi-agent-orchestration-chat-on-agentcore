{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "inputSchema": { "type": "object" }
        }
      }
    }
  },
  "tools": [
    {
      "name": "echo",
      "description": "入力されたメッセージをそのまま返すツール。メッセージの長さや大文字小文字変換も提供します。",
      "inputSchema": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "エコーするメッセージ文字列"
          }
        },
        "required": ["message"],
        "additionalProperties": false
      }
    },
    {
      "name": "ping",
      "description": "Lambda関数の接続確認とシステム情報を取得するツール。レスポンス時間やメモリ使用量などの情報を返します。",
      "inputSchema": {
        "type": "object",
        "properties": {},
        "additionalProperties": false
      }
    }
  ]
}
